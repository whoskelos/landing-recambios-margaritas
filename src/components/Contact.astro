---
import { Image } from "astro:assets"
import phone from "../assets/logos/phone.svg"
import whatsapp from "../assets/logos/whatsapp.webp"
import whats from "../assets/logos/whatsapp-logo.svg"
---
<section class="w-full  bg-[#dce8e9] dark:bg-[#1C3839] p-6 md:p-12 lg:p-20 text-4xl text-dark dark:text-white">
    <h2 class="text-3xl md:text-4xl lg:text-6xl  font-semibold uppercase text-center tracking-widest">Contacto</h2>
    <div class="w-full max-w-[1400px] mx-auto flex flex-col xl:flex-row gap-4 p-6 md:p-12 lg:p-20">
        <div class="w-full">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d97377.43712611771!2d-3.848893125008988!3d40.2969617717752!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd4221c850fbc121%3A0x32cd3fd693b32de!2srecambios%20las%20margaritas%20getafe!5e0!3m2!1ses!2ses!4v1711201671374!5m2!1ses!2ses"
                width="100%"
                height="450"
                style="border:0;border-radius: 8px;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="w-full rounded-lg p-2 [&>div]:mb-4">
            <h3 class=" font-medium text-base md:text-2xl text-center tracking-wide uppercase">Dirección:</h3>
            <div class="w-full flex items-center justify-center">
                <span class="font-light text-sm md:text-xl text-wrap text-center tracking-wide leading-relaxed">C. Cataluña, 36, local 2-1, 28903 Getafe, Madrid</span>
            </div>
            <h3 class=" font-medium text-base md:text-2xl text-center tracking-wide uppercase mb-2">Contacta con nosotros:</h3>
            <div class="w-full flex items-center justify-center gap-2">
                <a href="tel:+34919122516" class="w-full flex items-center justify-center gap-2">
                    <Image src={phone} alt="Teléfono de contacto" class="w-8 md:w-10 rounded-full" />
                    <span class="font-light text-2xl md:text-4xl tracking-wide leading-2">919 122 516 </span>
                </a>
            </div>
            <div class="w-full flex items-center justify-center gap-2">
                <a href="https://wa.me/34632291037" target="_blank" class="w-full flex items-center justify-center gap-2">
                    <Image src={whats} alt="Teléfono de contacto" class="w-8 md:w-10 rounded-full" />
                    <span class="font-light text-2xl md:text-4xl tracking-wide leading-2">632 291 037</span>
                </a>
            </div>
            <h3 class=" font-medium text-base md:text-2xl text-center tracking-wide uppercase mb-2">Horario:</h3>
            <div class="w-full flex items-center flex-col justify-center">
                <strong class="text-lg">Lunes a Viernes:</strong>
                <span class="font-light text-base">9:00–14:00, 16:00–20:00</span>
                <strong class="text-lg">Sábado</strong>
                <span class="font-light text-base">9:00–14:00</span>
                <strong class="text-lg">Domingo</strong>
                <span class="font-light text-base">Cerrado</span>
            </div>
        </div>
    </div>
</section>
