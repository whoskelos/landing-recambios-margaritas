---
import WhatsappIcon from "@icons/whatsapp.astro";
import FacebookIcon from "@icons/facebook.astro";
---

<footer
    class="w-full flex flex-col-reverse md:flex-row justify-center md:justify-between items-center bg-[#b7cdcf] dark:bg-[#172f30] p-6 md:p-12 lg:p-20 text-dark dark:text-white gap-4"
>
    <div class="w-full">
        <h3
            class="text-[#1C3839] dark:text-white font-bold tracking-wider text-xl md:text-xl text-start md:text-center lg:text-2xl uppercase"
        >
            <strong class="text-red-600">Recambios</strong> las Margaritas
        </h3>
        <p class="font-light text-sm md:text-base text-balance text-start md:text-center">
            C. Cataluña, 36, local 2-1, 28903 Getafe, Madrid
        </p>
        <div class="w-full flex items-center justify-start md:justify-center gap-2">
            <a href="https://wa.me/34632291037" target="_blank">
                <WhatsappIcon
                    size={30}
                    classSvg="text-green-700 dark:text-green-500 aspect-[1/1]"
                />
            </a>
            <a
                href="https://www.facebook.com/people/Recambios-Coches-Las-Margaritas-Getafe/100084250336953/?sk=about&locale=es"
                target="_blank"
            >
                <FacebookIcon size={34} classSvg="" />
            </a>
        </div>
    </div>
    <div class="w-full md:grid md:place-content-center">
        <ul>
            <span
                class="text-[#1C3839] dark:text-white text-center text-lg md:text-xl font-bold tracking-wide text-balance"
                >Navegación</span
            >
            <li class="font-light text-sm md:text-base hover:text-[#1C3839]">
                <a href="#inicio">Inicio</a>
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839]">
                <a href="#productos">Productos</a>
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839]">
                <a href="#contacto">Contacto</a>
            </li>
        </ul>
    </div>
    <div class="w-full md:grid md:place-content-center">
        <ul>
            <span
                class="text-[#1C3839] dark:text-white text-center text-lg md:text-xl font-bold tracking-wide text-balance"
            >
                Autores
            </span>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839]">
                <a href="https://www.freepik.es/" target="_blank"
                    >Diseñado por Freepik</a
                >
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839]">
                <a href="https://cv.kelvinguerrero.dev/" target="_blank"
                    >Kelvin Guerrero</a
                >
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839]">
                <a href="https://cv.mretamozo.com/" target="_blank"
                    >Michael Retamozo</a
                >
            </li>
        </ul>
    </div>
</footer>
