---
import WhatsappIcon from "@icons/whatsapp.astro";
import FacebookIcon from "@icons/facebook.astro";
---

<footer
    class="w-full flex flex-col-reverse md:flex-row justify-center md:justify-between items-center bg-[#b7cdcf] dark:bg-[#172f30] p-6 md:p-12 lg:p-20 text-dark dark:text-white gap-4"
>
    <div class="w-full">
        <h3
            class="text-[#1C3839] dark:text-white font-bold tracking-wider text-xl md:text-xl text-start md:text-center lg:text-2xl uppercase"
        >
            <strong class="text-[#C11010]">Recambios</strong> las Margaritas
        </h3>
        <p class="font-light text-sm md:text-base text-balance text-start md:text-center">
            C. Cataluña, 36, local 2-1, 28903 Getafe, Madrid
        </p>
        <div class="w-full flex items-center justify-start md:justify-center gap-2 pt-2">
            <a 
                href="https://wa.me/34632291037"
                target="_blank" 
                title="Whatsapp" 
                aria-label="Whatsapp"
                aria-labelledby="Whatsapp"
            >
                <WhatsappIcon
                    size={30}
                    classSvg="text-green-700 dark:text-green-500 hover:text-green-600 dark:hover:text-green-400 aspect-[1/1]"
                />
            </a>
            <a
                href="https://www.facebook.com/people/Recambios-Coches-Las-Margaritas-Getafe/100084250336953/?sk=about&locale=es"
                target="_blank"
                title="Facebook"
                aria-label="Facebook"
                aria-labelledby="Facebook"
            >
                <FacebookIcon size={30} classSvg="text-[#0766FF] hover:text-[#5898ff] aspect-[1/1]" />
            </a>
        </div>
    </div>
    <div class="w-full md:grid md:place-content-center">
        <span
            class="text-[#1C3839] dark:text-white text-lg md:text-xl font-bold tracking-wide text-balance"
            >Navegación</span
        >
        <ul>
            <li class="font-light text-sm md:text-base hover:text-[#020303] dark:hover:text-[#68b0b1]">
                <a href="#inicio">Inicio</a>
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839] dark:hover:text-[#68b0b1]">
                <a href="#productos">Productos</a>
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839] dark:hover:text-[#68b0b1]">
                <a href="#contacto">Contacto</a>
            </li>
        </ul>
    </div>
    <div class="w-full md:grid md:place-content-center">
        <span
            class="text-[#1C3839] dark:text-white text-lg md:text-xl font-bold tracking-wide text-balance"
        >
            Autores
        </span>
        <ul>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839] dark:hover:text-[#68b0b1]">
                <a href="https://cv.kelvinguerrero.dev/" target="_blank"
                    >Kelvin Guerrero</a
                >
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839] dark:hover:text-[#68b0b1]">
                <a href="https://cv.mretamozo.com/" target="_blank"
                    >Michael Retamozo</a
                >
            </li>
            <li class="font-light text-sm md:text-base hover:text-[#1C3839] dark:hover:text-[#68b0b1]">
                <a href="https://www.freepik.es/" target="_blank"
                    >Diseñado por Freepik</a
                >
            </li>
        </ul>
    </div>
</footer>
