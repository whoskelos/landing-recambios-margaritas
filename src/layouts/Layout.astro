---
import "@fontsource-variable/work-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta name="robots" content="follow, index">
    <meta name="description" content="Visita Recambios Las Margaritas en Getafe para encontrar una amplia gama de recambios para automóviles. Desde piezas hasta baterías, aceites y accesorios, tenemos todo lo que necesitas para mantener tu vehículo en perfecto estado. ¡Descubre nuestra tienda en Getafe!.">
		<meta name="keywords" content="recambios, getafe, repuestos, accesorios, automóvil, piezas, baterías, filtros, coche, margaritas, tienda, madrid, bombillas">
		<meta name="author" content="Kelvin Guerrero - Michael Retamozo">
		<meta property="og:title" content="Recambios las margaritas - Getafe - Tienda de recambios para el automóvil">
		<meta property="og:description" content="Visita Recambios Las Margaritas en Getafe para encontrar una amplia gama de recambios para automóviles. Desde piezas hasta baterías, aceites y accesorios, tenemos todo lo que necesitas para mantener tu vehículo en perfecto estado. ¡Descubre nuestra tienda en Getafe!. Tel: 919 122 516 - Whatsapp: 632 291 037">
    <meta property="og:image" content="/recambiosmargaritas.webp" />
		<meta property="og:url" content="https://recambioslasmargaritas.es">
    <meta property="og:type" content="website">
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "AutoPartsStore",
        "url": "https://recambioslasmargaritas.es",
        "name": "Recambios Las Margaritas",
        "areaServed": {
          "@type": "AdministrativeArea",
          "name": "Getafe"
        },
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Calle Cataluña, 36, local 2-1",
          "addressLocality": "Getafe",
          "addressRegion": "Madrid",
          "postalCode": "28903",
          "addressCountry": "ES"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+34919122516",
          "contactType": "customer service",
          "areaServed": "ES",
          "availableLanguage": ["Spanish"]
        },
        "keywords": "recambios, getafe, madrid, repuestos, accesorios, automóvil, piezas, baterías, filtros, coche, las margaritas, tienda, madrid, bombillas",
      },
      </script>
    <title>{title}</title>
  </head>
  <body class="snap-y snap-proximity">
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: "Work Sans Variable", sans-serif;
    background: #000000;
    background-size: 224px;
    scroll-behavior: smooth;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  ::-webkit-scrollbar {
    width: 10px;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: #999797;
    border: 2px solid transparent;
    background-clip: content-box;
  }

  ::-webkit-scrollbar-thumb:active {
    background-color: #dddddd;
  }

  ::-webkit-scrollbar-track {
    background: #53535385;
  }

  ::-webkit-scrollbar-corner {
    background: #535353;
  }

  .mask-image-smoth {
    mask-image: linear-gradient(to bottom, black 90%, rgba(0, 0, 0, 0.01) 100%);
  }

  .mark-image-none {
    mask-image: none;
  }
</style>
